{
  "description": "Send Clover and LCOV coverage reports to the Coveralls service.",
  "homepage": "https://github.com/cedx/coveralls.php",
  "name": "cedx/coveralls",

  "license": "Apache-2.0",
  "type": "library",

  "authors": [{
    "email": "cedric@belin.io",
    "name": "CÃ©dric Belin"
  }],
  "autoload": {
    "psr-4": {"Coveralls\\": "lib/"}
  },
  "bin": [
    "bin/coveralls"
  ],
  "config": {
    "optimize-autoloader": true
  },
  "keywords": [
    "client",
    "clover",
    "code",
    "coverage",
    "coveralls",
    "lcov",
    "observable",
    "rxphp"
  ],
  "require": {
    "php": ">=7.0.0",
    "ext-curl": "*",
    "ext-date": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pcre": "*",
    "ext-simplexml": "*",
    "ext-spl": "*",
    "cedx/lcov": "^2.0.0",
    "cedx/which": "^2.0.0",
    "guzzlehttp/guzzle": "^6.3.0",
    "nategood/commando": "^0.2.9",
    "reactivex/rxphp": "^2.0.2",
    "symfony/yaml": "^3.3.4",
    "voryx/event-loop": "^2.0.2",
    "webmozart/path-util": "^2.3.0"
  },
  "require-dev": {
    "apigen/apigen": "^5.0.0-RC3",
    "cedx/phpunit-expect": "^0.3.0",
    "phing/phing": "^2.16.0",
    "roave/better-reflection": "@dev"
  },
  "scripts": {
    "coverage": "php bin/coveralls var/coverage.xml",
    "test": "phpunit --colors=auto --verbose"
  },
  "support": {
    "issues": "https://github.com/cedx/coveralls.php/issues"
  }
}
