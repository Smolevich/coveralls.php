{
  "description": "Send Clover coverage reports to the Coveralls service.",
  "homepage": "https://github.com/cedx/coveralls.php",
  "name": "cedx/coveralls",

  "license": "Apache-2.0",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "type": "library",

  "authors": [{
    "email": "cedric@belin.io",
    "name": "CÃ©dric Belin"
  }],
  "autoload": {
    "psr-4": {"coveralls\\": "lib/"}
  },
  "config": {
    "optimize-autoloader": true
  },
  "keywords": [
    "client",
    "clover",
    "code",
    "coverage",
    "coveralls",
    "lcov"
  ],
  "require": {
    "php": ">=7.0.0",
    "cedx/lcov": "^0.2.0",
    "symfony/yaml": "^3.2.2"
  },
  "require-dev": {
    "phing/phing": "^2.16.0",
    "phpdocumentor/phpdocumentor": "^2.9.0",
    "phpmd/phpmd": "^2.6.0",
    "phpunit/phpunit": "^5.7.8",
    "satooshi/php-coveralls": "^1.0.1"
  },
  "scripts": {
    "coverage": "coveralls --coverage_clover=var/coverage.xml",
    "test": "phpunit"
  },
  "support": {
    "issues": "https://github.com/cedx/coveralls.php/issues"
  }
}
