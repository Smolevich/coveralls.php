{
  "description": "Send Clover and LCOV coverage reports to the Coveralls service.",
  "homepage": "https://github.com/cedx/coveralls.php",
  "name": "cedx/coveralls",

  "license": "Apache-2.0",
  "type": "library",

  "authors": [{
    "email": "cedric@belin.io",
    "name": "CÃ©dric Belin"
  }],
  "autoload": {
    "psr-4": {"coveralls\\": "lib/"}
  },
  "bin": [
    "bin/coveralls"
  ],
  "config": {
    "optimize-autoloader": true
  },
  "keywords": [
    "client",
    "clover",
    "code",
    "coverage",
    "coveralls",
    "lcov"
  ],
  "require": {
    "php": ">=7.0.0",
    "ext-curl": "*",
    "ext-date": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pcre": "*",
    "ext-simplexml": "*",
    "ext-spl": "*",
    "cedx/lcov": "^1.0.0",
    "evenement/evenement": "^2.0.0",
    "guzzlehttp/guzzle": "^6.2.3",
    "symfony/yaml": "^3.2.6",
    "webmozart/path-util": "^2.3.0"
  },
  "require-dev": {
    "cedx/phpunit-expect": "^0.1.0",
    "phing/phing": "^2.16.0",
    "phpdocumentor/phpdocumentor": "^2.9.0"
  },
  "scripts": {
    "coverage": "php bin/coveralls --file=var/coverage.xml",
    "test": "phpunit --colors=auto --verbose"
  },
  "support": {
    "issues": "https://github.com/cedx/coveralls.php/issues"
  }
}
